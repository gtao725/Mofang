                                    $("[name=txt_unitname]").val("");
                                    $("[name=txt_proportion]").val("");
                                    eip.datagrid.load("/Root/Unit/List", $("#grid_Pos_set"), eip.para.create($("input,select", $("#form_Pos"))));
                                }, function () { });
                            })
                        }
                },
               {
                   text: "关闭窗口", icon: "no", click:
                      function () {
                          eip.dialog.close(dlg_Pos);
                      }
               }
            ]
        }])
