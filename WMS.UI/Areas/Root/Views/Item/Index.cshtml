        var dlg_Pos = eip.dialog.create("新增单位", "<div id=layout1 ><div form='Y' id='form2'>"

                                   + "<input type=\"text\" left=\"140\" disabled  name=\"txt_ItemId\" value=\"" + row["操作"] + "\" hint=\"款号ID\" />"
