                                  + "<input type=\"text\" left=\"140\" name=\"txt_unitname\" hint=\"单位名称\" />"
                                     + "<input type=\"text\" left=\"140\" name=\"txt_proportion\" hint=\"数量比例\" />"
                                + "</div></div>", 500, 200)
        //窗体工具栏按钮 begin
        eip.layout.create($('#layout1'), [{
            obj: $('#form2'),
            buttons: [
                {
                    text: "保存", icon: "save", click:
