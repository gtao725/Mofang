    //单位管理
    function showUnit(obj) {
        var tr = eip.datagrid.getTr(obj)
        var row = eip.datagrid.getData(tr)
        var dlg_Pos = eip.dialog.create("款号单位管理———当前款号：" + row["款号"], "<div id=layout_Pos>"
                                + "<div region=\"north\" id=\"form_Pos\" style=\"height:65px;padding:5px;\">"
                                + "<input type=\"hidden\" name=\"txt_ItemId\" value=\"" + row["操作"] + "\">款号：<input type=\"text\" name=\"AltItemNumber\" value=\"" + row["款号"] + "\"></div>"
                                + "<div region=\"west\" style=\"width:100%;overflow-x:hidden;\" title=\"单位\">"
                                + "<table id=grid_Pos_set></table></div>"

                                + "</div>", 1000, 500)
        eip.datagrid.create({
            obj: $("#grid_Pos_set"),
            pagesize: 200,
