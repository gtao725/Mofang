    function EditDetail(obj) {
        var tr = eip.datagrid.getTr(obj)
        var row = eip.datagrid.getData(tr)

        var dlg = eip.dialog.create("修改合同明细", "<div id=layout5 ><div form='Y' id='form5'>"
                                    + "<span left=\"140\" hint=\"合同名称\">" + row["合同名称"] + "</span>"
                                    + "<span left=\"140\" hint=\"科目\">" + row["科目"] + "</span>"

                                    + "<input type=\"text\" left=\"140\" name=\"edit_ladderNumberBegin\" id=\"edit_ladderNumberBegin\" value=\"" + (row["天数阶梯数值起"] == null ? "" : row["天数阶梯数值起"]) + "\"  hint=\"天数阶梯数值起\" />"
                                    + "<input type=\"text\" left=\"140\" name=\"edit_ladderNumberEnd\" id=\"edit_ladderNumberEnd\" value=\"" + (row["天数阶梯数值止"] == null ? "" : row["天数阶梯数值止"]) + "\"  hint=\"天数阶梯数值止\" />"

                                   + "<input type=\"text\" left=\"140\" name=\"edit_price\" value=\"" + row["单价"] + "\" hint=\"单价\" />"

                                    + "</div></div>", 500, 360)

        eip.layout.create($('#layout5'), [{
            obj: $('#form5'),
            buttons: [
                {
                    text: "保存", icon: "save", click:
                        function () {

                            if ($("[name=edit_price]").val() == "") {
                                $.eipMsg.alert("单价不能为空！");
                                return;
                            }

                            var Id = row["操作"];

                            var para = [{ name: "edit_ladderNumberBegin", value: $("[name=edit_ladderNumberBegin]").val() }, { name: "edit_ladderNumberEnd", value: $("[name=edit_ladderNumberEnd]").val() }, { name: "edit_price", value: $("[name=edit_price]").val() }];

                            eip.get("/Root/ContractFormOut/EditContractForm?Id=" + Id, para, function (jsonObj) {
                                $.procAjaxData(jsonObj, function () {
                                    eip.datagrid.load("/Root/ContractFormOut/List", $("#grid"), eip.para.create($("input,select", $("#form1"))));
                                    eip.dialog.close(dlg);
                                }, function () { });
                            })

                        }
                },
               {
                   text: "关闭窗口", icon: "no", click:
                      function () {
                          eip.dialog.close(dlg);
                      }
               }
            ]
        }])

    }

    //删除
    function ContractFormDeleteAll(obj) {
        var tr = eip.datagrid.getTr(obj)
        var row = eip.datagrid.getData(tr)

        $.eipMsg.confirm("确定删除合同名称下的所有明细吗？", function () {
            eip.get("/Root/ContractFormOut/ContractFormDeleteAll?ContractName=" + eip.utf8(row["合同名称"]), null, function (jsonObj) {
