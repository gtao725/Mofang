@model WMS.UI.Controllers.Model.ClientRFFlowModel
@{
    Layout = "../../../../Views/head.cshtml";
}
<div id=layout>

    <div form="Y" id="form1">
        <input type="text" name="flowName" hint="流程名" />
    </div>
    <table id="grid"></table>
</div>

<div id='form22' style="display:none">
    @Html.EipInputFor(model => model.txt_FlowName, new { @left = "140" })
    <input type="text" left="140" name="txt_remark" hint="流程备注" />
</div>

<script type="text/javascript" src="/share/includes/eip.js"></script>
<script type="text/javascript">
    $(function () {

        //页面布局
        var layout = eip.layout.create(
            $("#layout"),
            [{
                obj: $('#form1'),
                buttons: [
                    {
                        text: "查询", icon: "search", click: function () {
                            eip.datagrid.load("/root/ClientRFFlow/List", $("#grid"), eip.para.create($("input,select", $("#form1"))));
                        }
                    },
                     {
                         text: "新增RF流程", icon: "add", click:
                         function () {
                             var dlg = eip.dialog.create("新增RF流程", "<div id=layout1 ><div form='Y' id='form2'>"
                                 + $("#form22").html()
                                 + "</div></div>", 500, 200)

                             //窗体工具栏按钮 begin
                             eip.layout.create($('#layout1'), [{
                                 obj: $('#form2'),
                                 buttons: [
                                     {
                                         text: "保存", icon: "save", click:
                                             function () {
                                                 if (!$("#form2").form('validate')) {
                                                     return false;
                                                 }

                                                 eip.get("/root/ClientRFFlow/AddClientRFFlow", eip.para.create($("input,select", $("#layout1"))), function (jsonObj) {
                                                     $.procAjaxData(jsonObj, function () {
                                                         $("[name=txt_FlowName]").val("");

                                                         eip.datagrid.load("/root/ClientRFFlow/List", $("#grid"), eip.para.create($("input,select", $("#form1"))));
                                                     }, function () { });
                                                 })
                                             }
                                     },
                                    {
                                        text: "关闭窗口", icon: "no", click:
                                           function () {
                                               eip.dialog.close(dlg);
                                           }
                                    }
                                 ]
                             }])
                             //end

                             $("[name=txt_FlowName]").focus();
                         }
                     }
                ]
            }]);

        //客制化
        eip.datagrid.create({
            obj: $("#grid"),
            pagesize: 200,
            hiddencolumns: [""],
            //showOrderBtns: true,
            muledit: false,
            lockcolumns: 2,
            columns: {
                "操作": {
                    formatter: function (row) {
                        var retHtml = " ";
                        retHtml += "<a href=# class=easyui-linkbutton iconCls='icon-edit' plain=true onclick='eip.datagrid.edit(this)' title='编辑流程' ></a>";
                        retHtml += "<a href=# class=easyui-linkbutton iconCls='icon-editor' plain=true onclick='FlowRuleManager(this)' title='RF流程配置' ></a>";

                        return retHtml;
                    },
                    editor: {
                        type: "func", func: function (row) {
                            var btn = $("<a href='#' id='saveButton' title='保存' class='easyui-linkbutton' plain='true' iconCls='icon-save'></a>" +
                            "<a href='#' id='cancelButton' title='取消' class='easyui-linkbutton' plain='true' onclick=\"eip.datagrid.reset($(this).closest('tr'))\" iconCls='icon-remove'></a>");
                            btn.click(function () {
                                var Id = row["操作"];     //得到ID

                                eip.get("/root/ClientRFFlow/ClientRFFlowEdit?Id=" + Id + "&FlowName=" + eip.utf8($("[name=edit_FlowName]").val()) + "&Remark=" + eip.utf8($("[name=edit_Remark]").val()), null, function (jsonObj) {
                                    $.procAjaxData(jsonObj, function () {
                                        eip.datagrid.load("/root/ClientRFFlow/List", $("#grid"), eip.para.create($("input,select", $("#form1"))));
                                    }, function () { });
                                })

                            });
                            return btn;
                        }
                    }
                },
                "流程名": {
                    editor: { type: "text", name: "edit_FlowName" }
                },
                "流程备注": {
                    editor: { type: "text", name: "edit_Remark" }
                }
            },
            dofunc: function (grid, trs) {
                for (i in trs)  //列 格式化增加颜色显示
                    $("td[field=UserNameCN],td[field=PassWord]", trs[i]).css('color', 'blue');
            },
            //lock:锁定，不可隐藏的栏位；hide：可以隐藏的栏位（show和hide只能设一个）；
            setup: { lock: ['UserNameCN'] }

        });

        $("[name=flowName]").focus();
        //开始查询list
        //eip.toolbar.getBtn(layout, '查询').click();
    });

    //流程配置管理
    function FlowRuleManager(obj) {
        var tr = eip.datagrid.getTr(obj)
        var row = eip.datagrid.getData(tr)
        var busGroupId = row["操作"]
        var dlg_Pos = eip.dialog.create("RF流程配置———当前流程：" + row["流程名"], "<div id=layout_Pos>"
                                + "<div id=\"form_Pos\" form=\"Y\" >"
                                + "</div>"
                                + "<table id=grid_Pos_set></table></div>", 1000, 500)
        eip.datagrid.create({
            obj: $("#grid_Pos_set"),
            pagesize: 200,
            hiddencolumns: ["操作", "BusinessFlowHeadId", "FlowRuleId", "GroupId"]
            , checkbox: function (row) {
                var retHtml = " ";
                retHtml += "<input type=checkbox name=chx_Pos value='" + row["操作"] + "' funcName='" + row["流程名"] + "' headId='" + row["BusinessFlowHeadId"] + "' groupId='" + row["GroupId"] + "' ";
                if (row["FlowRuleId"] != null || row["选择流程描述"] == "必选") {
                    retHtml += "Checked";
                }
                retHtml += ">";   //得到代理ID
                return retHtml;
            }
        });
        eip.layout.create($('#layout_Pos'), [{
            obj: $('#form_Pos'),
            buttons: [
                {
                    text: "保存", icon: "save", click:
                       function () {
                           if ($("[name=chx_Pos]:checked", $("#grid_Pos_set")).length == 0) {
                               $.eipMsg.alert("请先选择流程!");
                               return;
                           }

                           var arr_list = [];
                           $("[name=chx_Pos]:checked", $("#grid_Pos_set")).each(function () {
                               arr_list.push({ name: 'funcName', value: $(this).attr("funcName") });
                               arr_list.push({ name: 'headId', value: $(this).attr("headId") });
                               arr_list.push({ name: 'flowRuleId', value: $(this).val() });
                               arr_list.push({ name: 'groupId', value: $(this).attr("groupId") });
                           })

                           eip.post("/root/ClientRFFlow/AddClientFlowDetail?busGroupId=" + busGroupId, arr_list, function (jsonObj) {
                               $.procAjaxData(jsonObj, function () {
                                   eip.datagrid.load("/root/ClientRFFlow/RFFlowRuleDetailList?BusinessFlowGroupId=" + busGroupId, $("#grid_Pos_set"), eip.para.create($("input,select", $("#form_Pos"))));
                               }, function () { });
                           })
                       }
                },
                {
                    text: "关闭窗口", icon: "no", click:
                       function () {
                           eip.dialog.close(dlg_Pos);
                       }
                }
            ]
        }])

        eip.datagrid.load("/root/ClientRFFlow/RFFlowRuleDetailList?BusinessFlowGroupId=" + busGroupId, $("#grid_Pos_set"), eip.para.create($("input,select", $("#form_Pos"))));

    }




</script>
