@model WMS.Report.Controllers.Model.WorkAccountModel
@{
    Layout = "../../../../Views/head.cshtml";
}
<div id=layout>
    <div form="Y" id="form1">
        <input type="hidden" name="whCode" value="@ViewBag.whCode" />
        <select class="easyui-vhuo'xia'alidatebox" hint="工作类型" name="type" left="80"><option value='In'>收货</option><option value='Out'>出货</option></select>
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["workType"], "workType", "工人类型", "", "")
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["clientCode"], "ClientCode", "客户名", "", "")

        <input type="text" name="ReceiptId" hint="收货批次号" />
        <input type="text" name="LoadId" hint="Load号" />

        <input type="text" name="UserCode" hint="工号" />
        <input type="text" name="UserNameCN" hint="员工姓名" />

        @Html.EipInputFor(model => model.ReceiptDateBegin, new { @left = "100", @value = DateTime.Now.AddDays(0).ToString("yyyy-MM-dd") })
        @Html.EipInputFor(model => model.ReceiptDateEnd, new { @left = "100", @value = DateTime.Now.ToString("yyyy-MM-dd") })
    </div>
    <table id="grid"></table>
</div>

<script type="text/javascript" src="/share/includes/eip.js"></script>
<script type="text/javascript">

    $(function () {

        //页面布局
        var layout = eip.layout.create(
            $("#layout"),
            [{
                obj: $('#form1'),

                buttons: [
                    {
                        text: "查询", icon: "search", click: function () {
                            eip.datagrid.load("/Reports/WarhouseReport/WorkAccountList", $("#grid"), eip.para.create($("input,select", $("#form1"))));
                        }
                    }
                ]
            }]);

        //客制化
        eip.datagrid.create({
            obj: $("#grid"),
            pagesize: 50,
            ajaxType: 'post',    //load时，ajax请求类型
            sort: true,
            // sorts: { "ReceiptDate": "DESC", "托盘号": "ASC" },  //排序栏位：{'料号':'DESC','组织':'ASC'}
            showExcelExport: true,//显示汇出按钮
            //  hiddencolumns: ["ReceiptDate"],
            //showOrderBtns: true,
            //lockcolumns: 2,
            columns: {
                
            }
        });

    });

</script>