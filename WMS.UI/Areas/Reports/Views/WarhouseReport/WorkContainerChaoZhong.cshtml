
@{
    Layout = "../../../../Views/head.cshtml";
}
<div id=layout>
    <div form="Y" id="form1">
        <input type="hidden" name="whCode" value="@ViewBag.whCode" />

        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["clientCode"], "ClientCode", "客户名", "", "")
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["agentCode"], "agentId", "货代", "", "")

        <input type="text" name="LoadId" hint="Load号" />
      
        <input type="text" name="PackDateBegin" hint="装箱时间" date='Y'  value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")"  />
        <input type="text" name="PackDateEnd" left="20" hint="-" date='Y'  />

        <textarea name="ContainerNumber" left="60" hint="集装箱号"></textarea>
        <input name="showChaoZhong" hint="超重" type="checkbox" value="1"> 
    </div>
    <table id="grid"></table>
</div>

<script type="text/javascript" src="/share/includes/eip.js"></script>
<script type="text/javascript">

    $(function () {

        //页面布局
        var layout = eip.layout.create(
            $("#layout"),
            [{
                obj: $('#form1'),

                buttons: [
                    {
                        text: "查询", icon: "search", click: function () {
                            eip.datagrid.load("/Reports/WarhouseReport/WorkContainerChaoZhongList", $("#grid"), eip.para.create($("input,select,textarea", $("#form1"))));
                        }
                    }
                ]
            }]);

        //客制化
        eip.datagrid.create({
            obj: $("#grid"),
            pagesize: 50,
            ajaxType: 'post',    //load时，ajax请求类型
            sort: true,
            // sorts: { "ReceiptDate": "DESC", "托盘号": "ASC" },  //排序栏位：{'料号':'DESC','组织':'ASC'}
            showExcelExport: true,//显示汇出按钮
            //  hiddencolumns: ["ReceiptDate"],
            //showOrderBtns: true,
            //lockcolumns: 2,
            columns: {
                
            }
        });

        $("[name=ContainerNumber]").css("height", "25px").css("width", "185px");
        $("[name=ContainerNumber]").parent().css("height", "30px").css("width", "280px");

    });

</script>