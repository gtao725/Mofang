
@{
    Layout = "../../../../Views/head.cshtml";
}
<div id=layout>
    <div form="Y" id="form1">
        <input type="hidden" name="UserName" value="@ViewBag.UserName" />
        <input type="hidden" name="CompanyId" value="@ViewBag.CompanyId" />
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["whInfoCode"], "whCode", "仓库名", "", "")
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["clientCode"], "ClientCode", "客户名", "", "")

        <input type="text" left="100" name="ReceiptId" hint="收货批次号" />
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["regZone"], "regZone", "库区", "", "")
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["recStatus"], "recStatus", "收货状态", "", "")
        <input type="text" name="SoNumber" hint="SO" />
        <input type="text" name="PoNumber" hint="PO" />
        <input type="text" name="RegisterDateBegin" hint="登记时间" date='Y' value="@DateTime.Now.AddDays(0).ToString("yyyy-MM-dd")" />
        <input type="text" name="RegisterDateEnd" left="20" hint="-" date='Y' value="@DateTime.Now.AddDays(0).ToString("yyyy-MM-dd")" />

        <input type="text" name="ReceiptDateBegin" hint="收货时间" date='Y' />
        <input type="text" name="ReceiptDateEnd" left="20" hint="-" date='Y' />
        <input name="soWhere" hint="看SO查询" type="checkbox" value="1">
        <input name="hebingWhere" left="100" hint="合并收货批次" type="checkbox" value="1">

        <select class="easyui-vhuo'xia'alidatebox" hint="排序规则" name="orderBy"><option></option><option value='登记时间'>登记时间</option><option value='结束收货时间'>结束收货时间</option></select>

        <select class="easyui-vhuo'xia'alidatebox" hint="是否预约" name="isBK"><option></option><option value='是'>是</option><option value='否'>否</option></select>

    </div>
    <table id="grid"></table>
</div>

<script type="text/javascript" src="/share/includes/eip.js"></script>
<script type="text/javascript">

    $(function () {

        //页面布局
        var layout = eip.layout.create(
            $("#layout"),
            [{
                obj: $('#form1'),

                buttons: [
                    {
                        text: "查询", icon: "search", click: function () {
                            eip.datagrid.load("/Reports/RecReport/WarehouseReceiptList", $("#grid"), eip.para.create($("input,select", $("#form1"))));
                        }
                    }
                ]
            }]);

        //客制化
        eip.datagrid.create({
            obj: $("#grid"),
            pagesize: 50,
            ajaxType: 'post',    //load时，ajax请求类型
            sort: true,
            // sorts: { "ReceiptDate": "DESC", "托盘号": "ASC" },  //排序栏位：{'料号':'DESC','组织':'ASC'}
            showExcelExport: true,//显示汇出按钮
            hiddencolumns: ["pz"],
            //showOrderBtns: true,
            //lockcolumns: 2,
            columns: {
                "操作": {
                    formatter: function (row) {
                        var retHtml = " ";

                        if (row["收货状态"] == "完成收货") {
                            retHtml += "<a href=# class=easyui-linkbutton iconCls='icon-print' plain=true onclick='PrintReceiptId(this)' title='打印收货凭证' ></a>";
                        }

                        return retHtml;
                    }
                },
                dofunc: function (grid, trs) {
                    //for (i in trs)  //列 格式化增加颜色显示
                    //    $("td[field=UserNameCN],td[field=PassWord]", trs[i]).css('color', 'blue');
                }
            }
        });

    });

    //打印收货凭证
    function PrintReceiptId(obj) {
        var tr = eip.datagrid.getTr(obj)
        var row = eip.datagrid.getData(tr)
        var Id = row["收货批次号"];
        var pz=row["pz"];

        window.open(pz + "?id=" + Id);

    }
</script>