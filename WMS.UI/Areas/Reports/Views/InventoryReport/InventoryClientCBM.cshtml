
@{
    Layout = "../../../../Views/head.cshtml";
}
<div id=layout>
    <div form="Y" id="form1">
        <input type="hidden" name="whCode" value="@ViewBag.whCode" />

        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["agentCodeList"], "agentCode", "货代", "", "")
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["clientCodeList"], "clientCode", "客户", "", "")      
        @Html.EipGetSelect((IEnumerable<SelectListItem>)ViewData["zoneNameList"], "zoneName", "库区", "", "")
     
        <input type="text" name="BeginReceiptDate" left="90" hint="日期" date='Y'  />
        <input type="text" name="EndReceiptDate" left="20" hint="-" date='Y'  />

    </div>
    <table id="grid"></table>
</div>

<script type="text/javascript" src="/share/includes/eip.js"></script>
<script type="text/javascript">

    $(function () {

        //页面布局
        var layout = eip.layout.create(
            $("#layout"),
            [{
                obj: $('#form1'),

                buttons: [
                    {
                        text: "查询", icon: "search", click: function () {
                            eip.datagrid.load("/Reports/InventoryReport/InventoryClientCBMList", $("#grid"), eip.para.create($("input,select,textarea", $("#form1"))));
                        }
                    }
                ]
            }]);

        //客制化
        eip.datagrid.create({
            obj: $("#grid"),
            pagesize: 50,
            ajaxType: 'post',    //load时，ajax请求类型
            sort: true,
            // sorts: { "ReceiptDate": "DESC", "托盘号": "ASC" },  //排序栏位：{'料号':'DESC','组织':'ASC'}
            showExcelExport: true,//显示汇出按钮
            //  hiddencolumns: ["ReceiptDate"],
            //showOrderBtns: true,
            //lockcolumns: 2,
            columns: {

            }
        });

   
    });

</script>